<tal:block xmlns:i18n="http://xml.zope.org/namespaces/i18n"
           i18n:domain="silvaforum">
  <div class="forum"
       tal:define="show_form python:view.preview or view.message or view.text_missing">
    <script type="text/javascript">
      // <![CDATA[
      window.focussed_form_field = null;
      function add_smiley(text_to_add) {
      /* add a smiley to the textarea
      */
      var input = window.focussed_form_field;
      if (!input) {
      return;
      };
      var content = input.value;
      var lastchar = content.charAt(content.length - 1);
      if (lastchar && lastchar != ' ' && lastchar != '\t' && lastchar != '\n'
      && lastchar != '\r') {
      content += ' ';
      };
      content += text_to_add + ' ';
      input.value = content;
      input.focus();
      };
      // ]]>
    </script>
    <tal:usercontrols tal:replace="structure provider:usercontrols" />
    <h2 tal:define="forum context/aq_parent">
      <a title="up to forum..."
         tal:attributes="href forum/@@absolute_url"
         tal:content="forum/get_title"
         i18n:attributes="title">
        forum title
      </a>
    </h2>

    <tal:navigation tal:replace="structure view/navigation" />
    <table class="forum-content-table">
      <tal:block>
        <thead>
          <tr>
            <th class="author" i18n:translate="">Author</th>
            <th class="comment" i18n:translate="">Topic</th>
          </tr>
        </thead>
      </tal:block>
      <tbody>
        <tr class="topic">
          <td class="author">
            <p>
              <span class="author"
                    tal:content="context/get_creator">
                author
              </span>
              <span i18n:translate="">
                posted:
              </span>
            </p>
          </td>
          <td class="topic">
            <p class="datetime"
               tal:content="python:view.format_datetime(context.get_creation_datetime())">
                datetime
            </p>
            <h4 class="heading" tal:content="structure python:view.format_text(context.get_title())">
              subject
            </h4>
          </td>
        </tr>
        <tr tal:condition="view/comments">
          <th class="author" i18n:translate="">Author</th>
          <th class="author" i18n:translate="">Comment</th>
        </tr>
        <tal:comments tal:repeat="comment view/comments">
          <tr tal:define="iterate repeat/comment/odd"
              tal:attributes="class python: iterate and 'even' or 'odd'">
            <td class="author">
              <p>
                <a name="forum-bottom"
                   tal:condition="repeat/comment/end"
                   tal:omit-tag="view/preview">
                </a>
                <span class="author"
                      tal:content="comment/creator">author</span>
                <a title="Link to this message"
                   tal:attributes="href string:${comment/topic_url}/${comment/id}"
                   i18n:attributes="title"
                   i18n:translate="">posted</a>:
              </p>
            </td>
            <td class="comment">
              <p class="datetime"
                 tal:content="python:view.format_datetime(comment['creation_datetime'])"
                 i18n:translate="">
                datetime
              </p>
              <h5 class="heading"
                  tal:define="subject comment/title"
                  tal:condition="subject"
                  tal:content="structure python:view.format_text(subject)">
                topic
              </h5>
              <p class="comment"
                 tal:content="structure python:view.format_text(comment['text'])">
                comment
              </p>
            </td>
          </tr>
        </tal:comments>
      </tbody>
    </table>
    <tal:navigation tal:replace="structure view/navigation" />

    <tal:button tal:condition="view/can_post">
      <div class="toggle"
        tal:condition="not:view/preview">
        <input class="forum-add-comment" type="button" value="Add a comment"
          id="silvaforum-toggle-post-switch" i18n:attributes="value"
          tal:define="display python:show_form and 'none' or 'block'"
          tal:attributes="style string:display:${display}"
          onclick="
            document.getElementById('silvaforum-toggle-post-form').style.display='block';
            this.style.display='none';"
        />
      </div>
    </tal:button>
    <tal:comment tal:replace="nothing">
      XXX Needs conditions: if subscribing is possible, and all things are
      properly configured. We don't want users seeing "There was an error"
      because the site manager doesn't have everything setup.
    </tal:comment>
    <tal:button tal:condition="view/can_post">
      <div class="toggle"
        tal:condition="not:view/preview">
        <input class="forum-subscribe" type="button" value="Subscribe to topic"
          id="silvaforum-toggle-subscribe-switch" i18n:attributes="value"
          tal:define="display python:show_form and 'none' or 'block'"
          tal:attributes="style string:display:${display}"
          onclick="
            document.getElementById('silvaforum-toggle-subscribe-form').style.display='block';
            this.style.display='none';"
        />
      </div>
    </tal:button>

    <div id="silvaforum-toggle-post-form"
         tal:condition="view/can_post"
         tal:define="display python:show_form and 'block' or 'none'"
         tal:attributes="style string:display:${display}">
      <form id="forum-comment-form" method="post" name="post"
            action="#" class="forum-form"
            tal:attributes="action view/action_url">
        <div class="feedback" tal:condition="view/message">
          <span tal:content="view/message" i18n:translate="">message</span>
        </div>
        <input class="forum-hide-form" type="image"
          src="++resource++Products.SilvaForum/close_window.png"
          width="16" height="16" alt="close window"
          i18n:attributes="alt"
          tal:define="display python:show_form and 'none' or 'block'"
          tal:attributes="style string:display:${display};;float:right"
          onclick="
            document.getElementById('silvaforum-toggle-post-form').style.display='none';
            document.getElementById('silvaforum-toggle-post-switch').style.display='block';
            return false;
        "/>
        <h3 class="heading">
          <a name="forum-bottom"
             tal:omit-tag="not:view/preview"
             i18n:translate="">Post a new comment</a>
        </h3>
        <div class="forum-field">
          <label for="title" i18n:translate="">Subject</label>
          <input type="text" name="title" id="title" size="80" class="store"
                 onfocus="window.focussed_form_field = this"
                 tal:attributes="value view/title"
                 />
        </div>
        <div class="forum-field">
          <div class="feedback" tal:condition="view/text_missing">
            <span class="warning"
                  i18n:translate="">Please provide a message for the new comment.
            </span>
          </div>
          <div id="emoticons">
            <span class="emoticons"
                  tal:repeat="smileydata view/smileys">
              <img onclick="add_smiley(this.title)"
                   alt="add emoticon"
                   tal:attributes="title smileydata/text;
                                   src smileydata/href" />
            </span>
          </div>
          <label for="text" i18n:translate="">Message</label>
          <textarea name="text" id="text" rows="5" cols="68" class="store"
                    onfocus="window.focussed_form_field = this"
                    tal:content="view/text">
          </textarea>
        </div>

        <tal:comment tal:replace="nothing">
          XXX Needs condition: if email address is known and user is not
          yet subscribed. Address needs to be inserted in the label.
        </tal:comment>
        <div class="forum-field"
          tal:condition="not: view/need_captcha">
          <input type="checkbox" name="forum-subscribe" id="forum-subscribe"
            checked="checked">
          <label for="forum-subscribe">Subscribe me to the new topic (torvald@infrae.com)</label>
        </div>

        <div class="forum-field"
             tal:condition="view/need_anonymous_option">
          <input type="checkbox" name="anonymous" id="anonymous"
                 tal:attributes="checked python:view.anonymous and 'checked' or None" />
          <label for="anonymous" i18n:translate="">Post as anonymous</label>
        </div>

        <div class="forum-submit">
          <input type="submit" name="action.preview" value="Preview"
                 i18n:attributes="value" />
          <input type="submit" name="action.clear" value="Clear"
                 tal:condition="view/preview"
                 i18n:attributes="value" />
        </div>

        <table class="forum-content-table forum-preview"
               tal:condition="view/preview_validated">
          <thead>
            <tr>
              <th class="author" i18n:translate="">Author</th>
              <th class="comment" i18n:translate="">Topic</th>
            </tr>
          </thead>
          <tbody>
            <tr class="preview">
              <td class="author">
                <p class="author">
                  <span class="username"
                        tal:content="view/username">current username</span>
                  <tal:posted i18n:translate="">posted</tal:posted>
                </p>
              </td>
              <td class="comment">
                <h5 class="heading"
                    tal:condition="view/title"
                    tal:content="structure python:view.format_text(view.title)">
                  title
                </h5>
                <p class="comment"
                   tal:content="structure python:view.format_text(view.text)">
                </p>
              </td>
            </tr>
          </tbody>
        </table>

        <div class="forum-field captcha-field"
             tal:condition="view/need_captcha"
             tal:define="captcha nocall:context/@@captcha">
          <div class="captcha">
            <img tal:replace="structure captcha/image_tag" /><br />
            <input type="text" name="captcha" id="captcha" value="" size="18" />
          </div>
          <label for="captcha" i18n:translate="">
            To post your message enter the characters in this image.
            You can type them in lower case.
          </label>
        </div>

        <div class="forum-submit">
          <input type="submit" name="action.post" value="Post comment"
                 i18n:attributes="value" />
        </div>
      </form>
    </div>

    <div id="silvaforum-toggle-subscribe-form"
      tal:define="display python:show_form and 'block' or 'none'"
      tal:attributes="style string:display:${display}">
      <tal:provider tal:replace="structure provider:subscriptions" />
    </div>

  </div>

</tal:block>
