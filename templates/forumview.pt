<tal:block xmlns:i18n="http://xml.zope.org/namespaces/i18n"
           i18n:domain="silvaforum">
  <div class="forum"
       tal:define="here_url context/@@absolute_url">
    <script type="text/javascript">
      // <![CDATA[
      function add_smiley(text_to_add) {
      /* add a smiley to the topic field
      */
      var topic = document.getElementById('topic');
      var content = topic.value;
      var lastchar = content.charAt(content.length - 1);
      if (lastchar && lastchar != ' ' && lastchar != '\t' && lastchar != '\n'
          && lastchar != '\r') {
         content += ' ';
      };
      content += text_to_add + ' ';
      topic.value = content;
      topic.focus();
      };
      // ]]>
    </script>

    <tal:usercontrols tal:replace="structure provider:usercontrols" />
    <h2 class="heading"
      tal:content="context/get_title">
      Forum Title
    </h2>

    <a name="forum-top"></a>
    <form id="forum-thread-form"
          class="forum-form" method="post" name="post" action="#"
          tal:condition="view/can_post"
          tal:attributes="action string:${here_url}#forum-top" >
      <div class="feedback"
           tal:condition="view/message">
        <span tal:content="view/message" i18n:translate="">message</span>
      </div>
      <h3 class="heading" i18n:translate="">Post a new topic</h3>

      <div class="forum-field">
        <label for="topic" i18n:translate="">Subject</label>
        <div class="feedback"
             tal:condition="view/preview_not_topic">
          <span class="warning"
                i18n:translate="">Please provide a subject for the new topic.
          </span>
        </div>
        <input class="store" type="text"
               id="topic" name="topic" size="70"
               tal:attributes="value view/topic" />
        <div id="emoticons">
          <span class="emoticon" tal:repeat="smileydata view/smileys">
            <img onclick="add_smiley(this.title)" alt="emoticon"
                 i18n:attributes="alt"
                 tal:attributes="title smileydata/text;
                                 src smileydata/href" />
          </span>
        </div>
      </div>

      <div class="forum-field"
           tal:condition="view/need_anonymous_option">
        <input type="checkbox" name="anonymous" id="anonymous"
               tal:attributes="checked python:view.anonymous and 'checked' or None" />
        <label for="anonymous" i18n:translate="">Post as anonymous</label>
      </div>

      <div class="forum-submit">
        <input type="submit" name="action.preview" value="Preview"
               i18n:attributes="value" />
        <input type="submit" name="action.clear" value="Clear"
               tal:condition="view/preview"
               i18n:attributes="value" />
      </div>

      <table class="forum-content-table forum-preview"
             tal:condition="view/preview_validated">
        <thead>
          <tr tal:condition="view/topics">
            <th class="topic" i18n:translate="">Topics</th>
            <th class="datetime" i18n:translate="">Post date</th>
            <th class="poster" i18n:translate="">Author</th>
            <th class="comments" i18n:translate="">Comments</th>
          </tr>
        </thead>
        <tbody>
          <tr class="preview">
            <td class="topic">
              <p class="topic"
                tal:content="structure python:view.format_text(view.topic)" />
            </td>
            <td class="datetime">
              <p i18n:translate="">Now</p>
            </td>
            <td class="author">
              <p tal:content="view/username">current username</p>
            </td>
            <td class="comments">
              <p>0</p>
            </td>
          </tr>

        </tbody>
      </table>

      <div class="forum-field"
           tal:condition="view/need_captcha"
           tal:define="captcha nocall:context/@@captcha">
        <label for="captcha" i18n:translate="">
          To post your message enter the characters in the captcha (not case sensitive):
        </label><br />
        <img tal:replace="structure captcha/image_tag" /><br />
        <input type="text" name="captcha" id="captcha" value="" />
      </div>

      <div class="forum-submit">
        <input type="submit" name="action.post" value="Post topic"
               i18n:attributes="value" />
      </div>
    </form>

    <tal:navigation tal:replace="structure view/navigation" />
    <table class="forum-content-table"
           tal:condition="view/topics">
      <thead>
        <tr tal:condition="view/topics">
          <th class="topic" i18n:translate="">Topics</th>
          <th class="datetime" i18n:translate="">Post date</th>
          <th class="poster" i18n:translate="">Author</th>
          <th class="comments" i18n:translate="">Comments</th>
        </tr>
      </thead>
      <tbody>
        <tal:topics repeat="topic view/topics">
          <tr tal:define="iterate repeat/topic/odd"
              tal:attributes="class python:iterate and 'even' or 'odd'">
            <td class="topic">
              <p class="topic">
                <a tal:attributes="href topic/url"
                   tal:content="structure python:view.format_text(topic['title'])">
                  subject
                </a>
              </p>
            </td>
            <td class="datetime">
              <p tal:content="python:view.format_datetime(topic['creation_datetime'])"
                 i18n:translate="">
                datatime
              </p>
            </td>
            <td class="poster">
              <p tal:content="topic/creator">
                author
              </p>
            </td>
            <td class="comments">
              <p tal:content="topic/commentlen">
                number
              </p>
            </td>
          </tr>
        </tal:topics>
      </tbody>
    </table>
    <tal:navigation tal:replace="structure view/navigation" />

  </div>
</tal:block>
