<div id="forum-main" tal:define="dummy view/set_content_type_and_nocache;
                                 message request/message | nothing">
  <p class="forum-message" tal:content="message" tal:condition="message" />
  <table class="forum-content-table" border="1">
    <thead>
      <tr>
        <th>Topics</th>
        <th class="create-date-column">Post date</th>
        <th class="author-column">Author</th>
        <th class="comment-column">Comments</th>
      </tr>
    </thead>
    <tbody>
      <tr tal:repeat="thread context/threads">
        <td>
          <a tal:attributes="href thread/url"
             tal:content="thread/title"></a>
        </td>
        <td tal:content="python:view.format_datetime(thread['creation_datetime'])" />
        <td class="author-column" tal:content="thread/creator" />
        <td class="comment-column" tal:content="thread/commentlen" />
      </tr>
    </tbody>
  </table>
  <div class="submit">
    <a tal:attributes="href string:${context/absolute_url}/create_thread.html">New Topic</a>
  </div>
</div>
